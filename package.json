{
  "name": "lubomir-of-slavigrad",
  "version": "0.0.0",
  "homepage": "https://slavigrad.net",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:analyze": "ng build --configuration production && npm run analyze:bundle",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "analyze:bundle": "npx webpack-bundle-analyzer dist/LubomirOfSlavigrad/stats.json",
    "performance:budget": "node scripts/performance-budget.js",
    "performance:build": "npm run build:prod && npm run performance:budget",
    "performance:lighthouse": "lighthouse http://localhost:4200 --output=json --output-path=./lighthouse-report.json",
    "performance:full": "npm run build:prod && npm run performance:budget && npm run start & npm run performance:lighthouse",
    "deploy": "gh-pages -d dist/LubomirOfSlavigrad/browser"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.1.3",
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/forms": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/router": "^21.1.3",
    "@tailwindcss/typography": "^0.5.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-angular": "^0.563.0",
    "rxjs": "~7.8.0",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.3.0",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.3",
    "@angular/cli": "^21.1.3",
    "@angular/compiler-cli": "^21.1.3",
    "@types/jasmine": "~5.1.0",
    "@types/jspdf": "^1.3.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "gh-pages": "^6.3.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.2"
  }
}
